{
  "name": "daplog",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/styled-components": "^5.0.1",
    "axios": "^0.19.2",
    "he": "^1.2.0",
    "normalize.css": "^8.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1",
    "styled-components": "^5.1.0",
    "typescript": "~3.7.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "npm run json && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "clean": "rimraf public/api/ && mkdir public/api/",
    "json": "npm run clean && processmd ./src/articles/**/*.md --stdout --outputDir ./public/api/articles > ./public/api/articles.json",
    "deploy": "npm run build && firebase deploy",
    "lint": "eslint --ext .js,.ts,.tsx,.jsx ./src",
    "lint:fix": "eslint --fix --ext .js,.ts,.tsx,.jsx ./src"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@svgr/cli": "^5.3.1",
    "processmd": "^4.5.0",
    "rimraf": "^3.0.2"
  }
}
